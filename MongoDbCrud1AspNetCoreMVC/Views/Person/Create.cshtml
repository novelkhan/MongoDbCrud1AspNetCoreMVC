@model Person

<h2>Create Person</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="PersonName">Person Name</label>
        <input asp-for="PersonName" class="form-control" />
        <span asp-validation-for="PersonName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PersonAge">Person Age</label>
        <input asp-for="PersonAge" class="form-control" />
        <span asp-validation-for="PersonAge" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HomeTown">Home Town</label>
        <input asp-for="HomeTown" class="form-control" />
        <span asp-validation-for="HomeTown" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>