@model Person

<h2>Person Details</h2>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Person ID</dt>
        <dd class="col-sm-10">@Model.PersonId</dd>
        <dt class="col-sm-2">Person Name</dt>
        <dd class="col-sm-10">@Model.PersonName</dd>
