@model Person

<h2>Delete Person</h2>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Person ID</dt>
        <dd class="col-sm-10">@Model.PersonId</dd>
        <dt class="col-sm-2">Person Name</dt>
        <dd class="col-sm-10">@Model.PersonName</dd>
        <dt class="col-sm-2">Person Age</dt>
        <dd class="col-sm-10">@Model.PersonAge</dd>
        <dt class="col-sm-2">Home Town</dt>
        <dd class="col-sm-10">@Model.HomeTown</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PersonId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </div>
</form>